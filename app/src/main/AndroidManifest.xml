<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.hiddencontrol.tasksexample">

    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.AActivity"
            android:label="@string/activity_a"
            android:launchMode="standard"
            android:taskAffinity=".task1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.BActivity"
            android:label="@string/activity_b"
            android:launchMode="standard"
            android:taskAffinity=".task1" />

        <activity
            android:name=".ui.CActivity"
            android:label="@string/activity_c"
            android:launchMode="standard"
            android:taskAffinity=".task1" />

        <activity
            android:name=".ui.XActivity"
            android:label="@string/activity_x"
            android:launchMode="standard"
            android:taskAffinity=".task2" />

        <activity
            android:name=".ui.YActivity"
            android:label="@string/activity_y"
            android:launchMode="standard"
            android:taskAffinity=".task2" />

        <activity
            android:name=".ui.ZActivity"
            android:label="@string/activity_z"
            android:launchMode="standard"
            android:taskAffinity=".task2" />
    </application>

</manifest>
